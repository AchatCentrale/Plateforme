<div class="ui divided grid">



    {% if feed.feed is empty %}
        <h3 style="margin-left: 3%">Il n'y aucune activité pour ce client</h3>

    {% else %}



        {% for fe in feed.feed %}
            <div class="ui  cards">
                {% if fe["computed"] == 'tickets' %}
                    <div class="card">
                        <div class="content">
                            <div class="header">Tickets</div>
                            <div class="meta">{{ fe["INS_DATE"] | Time }}</div>
                            <div class="description">
                                {{ fe["ME_SUJET"] | raw | convert_encoding('UTF-8', 'Windows-1252') }}
                            </div>
                        </div>
                    </div>

                {% endif %}

                {% if fe["computed"] == 'notes' %}
                    <div class="card">
                        <div class="content">
                            <div class="header">Notes</div>
                            <div class="meta">{{ fe["INS_DATE"] | Time }}</div>
                            <div class="description">
                                {{ fe["CN_NOTE"]   }}
                            </div>


                        </div>
                    </div>


                {% endif %}

                {% if fe["computed"] == 'taches' %}
                    <div class="card">
                        <div class="content">

                            <div class="header">Tâches &emsp;
                                <i data-id="{{ fe["CLA_ID"] }}" data-centrale="{{ app.request.get('centrale') }}"
                                   class="archive cursor icon archive-task"></i></div>
                            <div class="meta">{{ fe["INS_DATE"] | Time }}</div>
                            <div class="description">
                                {{ fe["CLA_NOM"] | raw | convert_encoding('UTF-8', 'Windows-1252') }}
                            </div>


                        </div>
                    </div>





                {% endif %}

            </div>



        {% endfor %}

    {% endif %}

</div>






