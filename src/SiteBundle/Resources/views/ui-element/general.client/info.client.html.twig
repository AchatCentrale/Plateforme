<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>FICHE CLIENT
                </h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">


                <div class="col-md-3 col-sm-3 col-xs-12 profile_left">

                    <div class="profile_img">


                        <div id="crop-avatar">
                            <!-- Current avatar -->
                            <img class="img-responsive img-rounded  avatar-view"
                                 src="http://www.centrale-roc-eclerc.fr/UploadFichiers/Uploads/CLIENT_{{ client[0].clId }}/{{ client[0].clLogo }}"
                                 alt="Logo" style="width: 35%">


                            <!-- Loading state -->
                            <div class="loading" aria-label="Loading" role="img" tabindex="-1"></div>
                        </div>
                        <!-- end of image cropping -->

                    </div>
                    <h3> {{ client[0].clRaisonsoc }}</h3>

                    <ul class="list-unstyled user_data">
                        <li><i class="fa fa-map-marker user-profile-icon"></i>
                            {{ client[0].clAdresse1 }},<br>
                            {{ client[0].clVille }} {{ client[0].clCp }}
                        </li>
                    </ul>

                    <a class="btn btn-success"><i class="fa fa-edit m-right-xs"></i>Modifier le profil</a>
                    <br/>
                    {% if client[0].clWeb %}
                        <li class="m-top-xs">
                            <i class="fa fa-external-link user-profile-icon"></i>
                            <a href="{{ client[0].clWeb }}" target="_blank">{{ client[0].clWeb }}</a>
                        </li>
                    {% endif %}

                </div>
                <div class="col-md-9 col-sm-9 col-xs-12">


                    <div class="profile_title">
                        <h2>Données du client </h2>
                    </div>

                    <div class="ui grid">
                        <div class="six wide column">
                            <div class="donne-client">
                                <p>Siret : {{ client[0].clSiret }}</p>
                                <p class="cursor">Mail : <a class="cursor"
                                                            href="mailto:{{ client[0].clMail }}">{{ client[0].clMail }}</a>
                                </p>
                                <p>Téléphone : {{ client[0].clTel | phone }}</p>
                            </div>
                        </div>
                        <div class="ten wide column recap-client">
                            <table class="ui very basic collapsing celled table">
                                <thead>
                                <tr>
                                    <th>Creation du compte</th>
                                    <th>Adhésion du compte</th>
                                    <th>Payé ?</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>
                                        {{ client[0].insDate | Time }}
                                    </td>
                                    <td>
                                        {{ client[0].clDtAdhesion |date_modify("+1 year") | timeFromNow }}
                                    </td>
                                    <td>
                                        <a class="ui green label">Payé</a>
                                    </td>
                                </tr>
                                <tr>

                                </tbody>
                            </table>
                        </div>
                    </div>


                    <div class="" role="tabpanel" data-example-id="togglable-tabs">


                        <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                            <li role="presentation" class="active">
                                <a href="#tab_content1" id="home-tab"
                                   role="tab"
                                   data-toggle="tab" aria-expanded="true">
                                    Actions
                                </a>
                            </li>
                            <li role="presentation" class="">
                                <a href="#tab_content2" role="tab" id="profile-tab"
                                   data-toggle="tab" aria-expanded="false">
                                    Notes
                                </a>
                            </li>
                            <li role="presentation" class="">
                                <a href="#tab_content3" role="tab" id="profile-tab"
                                   data-toggle="tab" aria-expanded="false">
                                    Utilisateurs
                                </a>
                            </li>

                        </ul>


                        <div id="myTabContent" class="tab-content">
                            <div role="tabpanel" class="tab-pane fade active in" id="tab_content1"
                                 aria-labelledby="home-tab">

                                <!-- start recent activity -->
                                <ul class="messages">


                                    {% for tasks in task %}
                                        <li>
                                            <div class="message_wrapper">
                                                <h4 class="heading">{{ tasks.claNom }}</h4>
                                                <blockquote class="message">
                                                    {{ tasks.claDescr }}
                                                </blockquote>
                                                {{ tasks.claEcheance | timeFromNow }}
                                                <br/>
                                            </div>
                                        </li>

                                    {% endfor %}

                                </ul>
                                <!-- end recent activity -->

                            </div>
                            <div role="tabpanel" class="tab-pane fade" id="tab_content2" aria-labelledby="profile-tab">
                                a
                            </div>
                            <div role="tabpanel" class="tab-pane fade" id="tab_content3" aria-labelledby="profile-tab">
                                <table class="ui celled padded table">
                                    <thead>
                                    <tr>

                                        <th>Prénom</th>
                                        <th>Nom</th>
                                        <th>Fonction</th>
                                        <th>Tel</th>
                                        <th>Mail</th>
                                        <th>Password</th>

                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for users in user %}
                                        <tr>
                                            <td><a href="http://www.centrale-roc-eclerc.fr/Login.asp?LOGIN={{ users.ccMail }}&PASS={{ users.ccPass }}">{{ users.ccPrenom }}</a></td>
                                            <td>{{ users.ccNom }}</td>
                                            <td>{{ users.ccFonction }}</td>
                                            <td>{{ users.ccTel }}</td>
                                            <td>{{ users.ccMail  }} </td>
                                            <td>{{ users.ccPass }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

