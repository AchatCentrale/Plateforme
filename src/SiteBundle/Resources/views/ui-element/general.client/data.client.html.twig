                        <tbody>
                        <tr>
                            <td></td>
                            <td></td>

                        </tr>

                        {#{% for tasks in task %}
                            <tr>
                                <td>{{ tasks.claNom }}</td>
                                <td>{{ tasks.claType | type }}</td>
                                <td>{{ tasks.claEcheance | timeFromNow }}</td>
                                <td>{{ tasks.claPriorite | priorite | raw }}</td>
                            </tr>
                        {% endfor %}#}

                        </tbody>
                    </table>
                    {#{% endif %}#}
                </div>


            </div>
        </div>
    </div>
</div>


