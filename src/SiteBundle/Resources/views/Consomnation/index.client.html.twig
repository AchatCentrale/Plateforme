{% extends 'base.html.twig' %}

{% block title %}
    CONSOMMATION - ACHAT-CENTRALE
{% endblock %}

{% block body %}




    <div class="x_panel">
        <div class="row tile_count">
            <div class="col-md-4 col-sm-4 col-xs-6 tile_stats_count">
                <div class="ui statistic">
                    <div class="value">
                        {{ ca_prix_public }} €
                    </div>
                    <div class="label">
                        CA Prix Public
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-6 tile_stats_count">
                <div class="ui statistic">
                    <div class="value">
                        {{ ca_prix_centrale }} €
                    </div>
                    <div class="label">
                        CA Prix Centrale
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-6 tile_stats_count">
                <div class="ui statistic">
                    <div class="value">
                        {{ ca_prix_public - ca_prix_centrale }} €
                    </div>
                    <div class="label">
                        D'économie
                    </div>
                </div>
            </div>

        </div>
    </div>



    <div class="x_panel">




        <div class="x_content ">
            <div class="row">
                <div class="col-md-4">
                    <canvas id="myChart" width="400" height="400"></canvas>


                </div>
                <div class="col-md-8">





                </div>
            </div>
        </div>
    </div>














{% endblock %}

